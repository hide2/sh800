<!-- content0 -->
<div id="container">
	<div id="content" style="float:none;">
		<table width="100%" style="border-bottom:1px solid #808080">
			<tr>
				<td>
					<div id="userInfo">
						<a href="/user/<%=@user.id%>">
							<span style="font-size:18px;font-weight:bold"><%=@user.login%></span>
						</a>
					</div>
					<% if login? && login_user.id == @user.id %>
					<div id="manage">
						<div style="font-size:12px;line-height:28px;">
							余额0元
							<a href="#" target="_blank" style="color:red">现在充值有惊喜！</a>
							 | 
							<a href="/user/<%=login_user.id%>/edit">修改密码</a>
							 | 
							<a href="/site/tuichu">退出登录</a>
						</div>
					</div>
					<% end %>
				</td>
			</tr>
		</table>
		<% if login? && login_user.id == @user.id %>
		<div id="vipInfo" style="clear:both;margin:8px 2px;">
			您现在是普通用户，<a href="#" target="_blank">点击这里马上升级为VIP用户</a>，享受VIP专属特权！
		</div>
		<% end %>
		<div class="datagrid block">
			<h2 style="padding:2px 6px;">已发布的信息</h2>
			<% if @ms.blank? %>
			目前没有信息。
			<% else %>
			<table border="0" width="100%" cellspacing="2" cellpadding="0">
				<% @ms.each do |m| %>
				<tr>
					<td width="50">
						<nobr>
						<span class="date"><%= m.publish_time.strftime("%m月%d日") %></span>
						</nobr>
					</td>
					<td width="45%" style="font-size:14px;line-height:180%">
						&nbsp;<a href="/message/<%=m.id%>" target="_blank"><%=m.title%></a>
					</td>
					<td style="font-size:12px;">
						<% if login? && login_user.id == @user.id %>
						<a href="/message/<%=m.id%>/delete">删除</a>
						<% end %>
					</td>
				</tr>
				<% end %>
			</table>
			<% end %>
		</div>
	</div>
</div>
